[alias]
	s = status -suno
	br = branch
	pull = pull --ff
	d = difftool
	co = checkout
	ci = commit
    # log with date relative
	l = log --graph --pretty=\"format:%C(yellow)%h%Cblue%d%Creset %s %C(white) %an, %ar%Creset\"
    # log with date and time
	lt = log --graph --pretty=\"format:%C(yellow)%h%Cblue%d%Creset %s %C(white) %an, %ai%Creset\"
    # other formats: '%ad' '%aD' '%at' '%aI' '%as'

#[core]
#	editor = vim
#	pager = less -X
#	excludesfile = ${HOME}/.gitignore

[color]
	ui = always

[push]
	default = matching

# Always rebase when pulling in case some modifications
# where ahead
[pull]
	rebase = true

# This will set the new woke policy ..
[init]
	defaultBranch = main

